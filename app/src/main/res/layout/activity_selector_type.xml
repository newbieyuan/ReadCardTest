<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yy.SelectorTypeActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSerialPort"
        android:onClick="serialPortReadCard"
        android:text="串口读卡"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUsb"
        android:onClick="usbReadCard"
        android:text="USB口读卡"
        app:layout_constraintTop_toBottomOf="@+id/btnSerialPort"
        />

</android.support.constraint.ConstraintLayout>
